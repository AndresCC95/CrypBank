            android:layout_marginStart="200dp"
            android:layout_marginTop="200dp"
            android:fontFamily="monospace"
            android:hint="PrecioCrypto3"
            android:textColor="@color/white"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/editPrecioDos" />

        <TextView
            android:id="@+id/cryptoCuatro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="25dp"
            android:layout_marginTop="250dp"
            android:fontFamily="monospace"
            android:text="Crypto 4:"
            android:textColor="@color/white"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cryptoTres" />

        <TextView
            android:id="@+id/editCryptoCuatro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="120dp"
            android:layout_marginTop="250dp"
            android:fontFamily="monospace"
            android:hint="Crypto4"
            android:textColor="@color/white"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/editCryptoTres" />

        <TextView
            android:id="@+id/editPrecioCuatro"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="200dp"
            android:layout_marginTop="250dp"
            android:fontFamily="monospace"
            android:hint="PrecioCrypto4"
            android:textColor="@color/white"
            android:textSize="16sp"
            app:layout_constraintStart_toStartOf="parent"
